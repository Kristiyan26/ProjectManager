@model ProjectManager.ViewModels.Home.LoginVM


@{
    Layout = "/Views/Shared/_Site.cshtml";
    ViewData["Title"] = "Login";
}



<fieldset>
    <legend>LOGIN</legend>
    <form asp-action="Login" asp-controller="Home" method="post">
        <div class="grid">
            <div class="row">
                <div class="col-1">@Html.LabelFor(m=>m.Username)</div>
                <div class="col-2">
                    @Html.TextBoxFor(m=>m.Username)
                </div>
                  <div class="col-2">@Html.ValidationMessageFor(m=>m.Username)  </div>
            </div>
            <div class="row">
                <div class="col-1">@Html.LabelFor(m=>m.Password)</div>
                <div class="col-2">
                     @Html.PasswordFor(m=>m.Password)
                </div>
                <div class="col-2">@Html.ValidationMessageFor(m=>m.Password)  </div>
                   
            </div>
                <div class="row">
                <div class="col-1"></div>
                <div class="col-2">
                    @Html.ValidationMessage("authError",
                                               new { @style = "error right" })
                </div>
            </div>
            <div class="row">
                <div class="col-1"></div>
                <div class="col-2">
                    <input type="submit" class="right btn btn-primary" value="Login" />
                </div>
            </div>
        </div>
    </form>
</fieldset>
